@page
@model Swaggy.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>
<h2>Welcome to hotel california</h2>

<form method="get">
    <div class="input-group">
        <input type="search" class="form-control" asp-for="SearchTerm" />
        <input type="submit" value="Search" />
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.CuisineType</td>
            <td>
                <a asp-page="./Detail" asp-route-restaurantId="@restaurant.Id" >Show Details</a>
            </td>
            <td>
                <a asp-page="./Edit" asp-route-restaurantId="@restaurant.Id">Edit Restaurant</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-page="./Edit">Add New</a>

<h3>@Model.Message</h3>